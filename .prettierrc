{
    "tabWidth": 4,
    "printWidth": 110,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "singleQuote": false,
    "trailingComma": "all",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["**/*.yml", "**/*.yaml", "**/*.md", "**/*.css"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
